#lang racket

;problema 1
(define (rectangulo a b calculo)
    (cond
        ((eq? calculo 'perimetro)
            (* (+ a b) 2))
        ((eq? calculo 'diagonal)
            (sqrt (+ (sqr a) (sqr b))))
        (else (* a b))
    )
)

;problema 2
(define (mediana a b c)
    (cond
        ((or (and (<= b a) (<= a c)) (and (>= b a) (>= a c)))
            a)
        ((or (and (<= a b) (<= b c)) (and (>= a b) (>= b c)))
            b)
        ((or (and (<= a c) (<= c b)) (and (>= a c) (>= c b)))
            c)
    )
)

;problema 3
(define (masomenos a b c d)
    (cond
        ()
    )
)